<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.upc.fib.idi.sergigranell.campionatdelliga.MostraPartit">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Equip local:"
        android:id="@+id/textview_equip_local_string"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textview_equip_local"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="&lt;equip>"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Equip visitant:"
        android:id="@+id/textview_equip_visitant_string"
        android:layout_below="@+id/textview_equip_local_string"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="&lt;equip>"
        android:id="@+id/textview_equip_visitant"
        android:layout_below="@+id/textview_equip_local"
        android:layout_alignStart="@+id/textview_equip_local"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resultat:"
        android:id="@+id/textview_resultat_string"
        android:layout_below="@+id/textview_equip_visitant_string"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="&lt;resultat>"
        android:id="@+id/textview_resultat"
        android:layout_below="@+id/textview_equip_visitant"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jornada:"
        android:id="@+id/textview_jornada_string"
        android:layout_below="@+id/textview_resultat_string"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="&lt;jornada>"
        android:id="@+id/textview_jornada"
        android:layout_below="@+id/textview_resultat"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Llista de gols del partit:"
        android:id="@+id/textview_llista_gols_partit_text"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/textview_jornada_string"
        android:layout_alignParentStart="true"/>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listview_llista_gols_partit"
        android:layout_below="@+id/textview_llista_gols_partit_text"
        android:layout_alignParentStart="true"/>

</RelativeLayout>
