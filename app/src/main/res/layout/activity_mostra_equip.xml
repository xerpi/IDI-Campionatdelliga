<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.upc.fib.idi.sergigranell.campionatdelliga.MostraEquip">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignEnd="@+id/mostra_equip_textview_partits_perduts_string">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <ImageView
                    android:layout_width="256px"
                    android:layout_height="256px"
                    android:id="@+id/imageview_escut_equip"
                    android:src="@android:drawable/ic_menu_gallery"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/mostra_equip_textview_partits_guanyats_string"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Escut"
                    android:id="@+id/mostra_equip_textview_escut_string"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignBottom="@+id/imageview_escut_equip"
                    android:gravity="center_vertical"
                    android:textAppearance="?android:attr/textAppearanceMedium"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Partits guanyats"
                    android:id="@+id/mostra_equip_textview_partits_guanyats_string"
                    android:layout_alignTop="@+id/mostra_equip_textview_partits_guanyats"
                    android:layout_alignParentStart="true"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@android:color/holo_green_light"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Partits empatats"
                    android:id="@+id/mostra_equip_textview_partits_empatats_string"
                    android:layout_below="@+id/mostra_equip_textview_partits_guanyats_string"
                    android:layout_alignParentStart="true"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@android:color/holo_blue_dark"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Partits perduts"
                    android:id="@+id/mostra_equip_textview_partits_perduts_string"
                    android:layout_below="@+id/mostra_equip_textview_partits_empatats_string"
                    android:layout_alignParentStart="true"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@android:color/holo_red_dark"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Punts"
                    android:id="@+id/mostra_equip_textview_partits_punts_string"
                    android:layout_below="@+id/mostra_equip_textview_partits_perduts_string"
                    android:layout_alignParentStart="true"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#e5dd00"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:id="@+id/mostra_equip_textview_partits_guanyats"
                    android:layout_marginTop="19dp"
                    android:layout_below="@+id/imageview_escut_equip"
                    android:layout_centerHorizontal="true"
                    android:textAppearance="?android:attr/textAppearanceMedium"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:id="@+id/mostra_equip_textview_partits_empatats"
                    android:layout_below="@+id/mostra_equip_textview_partits_guanyats"
                    android:layout_centerHorizontal="true"
                    android:textAppearance="?android:attr/textAppearanceMedium"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:id="@+id/mostra_equip_textview_partits_perduts"
                    android:layout_above="@+id/mostra_equip_textview_partits_punts_string"
                    android:layout_centerHorizontal="true"
                    android:textAppearance="?android:attr/textAppearanceMedium"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:id="@+id/mostra_equip_textview_punts"
                    android:layout_below="@+id/mostra_equip_textview_partits_perduts"
                    android:layout_centerHorizontal="true"
                    android:textAppearance="?android:attr/textAppearanceMedium"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/mostra_equip_textview_partits_punts_string"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="27dp">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mostra jugadors"
                        android:id="@+id/button_mostra_jugadors"
                        android:layout_below="@+id/mostra_equip_textview_partits_punts_string"
                        android:layout_alignParentStart="true"/>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mostra EvoluciÃ³"
                        android:id="@+id/button_mostra_evolucio"
                        android:layout_below="@+id/button_mostra_jugadors"
                        android:layout_alignParentStart="true"
                        android:layout_alignEnd="@+id/button_mostra_jugadors"/>

                </RelativeLayout>

            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
